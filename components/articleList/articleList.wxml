<view class="article-list">
  <navigator wx:for="{{articles}}"  wx:for-index="i" wx:key="{{index}}" class="item" url="../articleContent/articleContent?id={{item._id}}">
    <view class='article-tag'>来自标签
      <view wx:for="{{item.tags}}"  wx:for-index="j" wx:key="j" wx:for-item="tag" class='article-tag-name'>
        <navigator class='article-tag-a'>{{tag}}</navigator>
        <view class='article-tag-dot' wx:if="{{j<item.tags.length-1}}">, </view>
      </view>
    </view>
    <view>
      <view class='article-title'>{{item.title}}</view>
    </view>
    <view class="article-content" hover-class="" hover-stop-propagation="false">{{ item.content }}</view>
    <view class='article-create-info'>
      <view class='article-create-info-detail article-create-info-user'>{{ item.create_user }}</view>
      <view class='article-create-info-detail article-create-info-dot'>·</view>
      <view class='article-create-info-detail article-create-info-time'>{{ item.update_date }}</view>
    </view>
  </navigator>
</view>
