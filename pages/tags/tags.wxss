/* pages/tags/tags.wxss */
.container-head {
  padding: 20rpx 30rpx;
  background: #fff;
  font-size: 28rpx;
}
.tag-list {
  padding: 20rpx 16rpx 0;
}
.tag-item {
  background: #fff;
  padding: 10rpx;
  display: block;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(32,33,36,.28);
}
.tag-item-head, .tag-item-content , .tag-item-bottom {
  padding: 24rpx 32rpx;
}
.tag-item-head {
  font-size: 32rpx;
  color: #1989fa;
  font-weight: 700;
  line-height: 40rpx;
}
.tag-item-line {
  margin: 0px 16px;
  border-width: 0px 0px 1px;
  border-bottom-color: #dfe1e5;
  border-bottom-style: solid;
}
.tag-item-content {
  color: #888;
  font-size: 24rpx;
}
.tag-item-bottom {
  font-size: 24rpx;
  color: #888;
}
.tag-item-bottom-href {
  color: #1989fa;
  display: inline;
  font-weight: bold;
}