/* pages/tagContent/tagContent.wxss */
.tag-info-box {
  width: 100%;
  height: 300rpx;
  background: #fff;
  position: relative;
  color: #666;
}
.tag-info {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  text-align: center;
}
.tag-title {
  font-size: 50rpx;
  line-height: 60rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}
.tag-meta {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}