@import '/towxml/style/main.wxss';
/* @import '/towxml/style/theme/light.wxss'; */

.detail-container {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #fff;
}
.article-title {
  font-size: 64rpx;
  margin: 40rpx 0;
  font-weight: 700;
}
.article-info {
  display: flex;
}
.article-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-block;
  margin: 0 20rpx 0 0;
}
.article-info-text {
  display: inline-block;
}
.article-create {
  font-size: 30rpx;
  color: #28a946;
}
.article-time {
  font-size: 26rpx;
  color: #909090;
}
.article-tags {
  margin: 60rpx 0 20rpx;
}
.article-tag-item {
  margin-right: 10rpx;
}
.comment-container {
  margin-bottom: 20rpx;
  background: #fff;
  font-size: 28rpx;
}
.comment-header {
  padding: 20rpx 30rpx;
  color: #555;
  border-bottom: 2rpx solid #ddd;
}
.comment-item {
  padding: 0 30rpx 20rpx;
  border-bottom: 2rpx solid #ddd;
}
.comment-item-head {
  padding-top: 20rpx;
  overflow: auto;
}
.comment-avatar {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 0 10rpx 0 0;
}
.comment-user {
  float: left;
  color: #28a946;
}
.comment-time {
  color: #ddd;
  padding-left: 70rpx;
}
.comment-content {
  padding: 0 0 10rpx 70rpx;
  color: #555;
}
.comment-empty {
  font-size: 14px;
  color: #ddd;
  padding: 40px 100px;
  text-align: center;
}