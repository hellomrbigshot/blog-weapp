<!--pages/articles/articles.wxml-->
<view class='container'>
  <scroll-view scroll-y>
    <navigator wx:for="{{articles}}"  wx:for-index="i" wx:key="{{index}}" hover-class="hover-article" class="item" url="../articleContent/articleContent?id={{item._id}}">
      <view class='article-tag'>来自标签
        <view wx:for="{{item.tags}}"  wx:for-index="j" wx:key="j" wx:for-item="tag" class='article-tag-name'>
          <navigator class='article-tag-a'>{{tag}}</navigator>
          <view class='article-tag-dot' wx:if="{{j<item.tags.length-1}}">, </view>
        </view>
      </view>
      <view>
        <view class='article-title'>{{item.title}}</view>
      </view>
      <view class='article-create-info'>
        <view class='article-create-info-item'>
          <view class='article-create-info-detail'>{{ item.create_user }}</view>
        </view>
        <view class='article-create-info-item'>
          <view class='article-create-info-detail'>{{ item.update_date }}</view>
        </view>
      </view>
    </navigator>
  </scroll-view>
  <van-tabbar active="{{ active }}" bind:change="onChange">
    <van-tabbar-item icon="shop">标签</van-tabbar-item>
    <van-tabbar-item icon="chat">标签</van-tabbar-item>
    <van-tabbar-item icon="records">标签</van-tabbar-item>
    <van-tabbar-item icon="gold-coin">标签</van-tabbar-item>
  </van-tabbar>
</view>
